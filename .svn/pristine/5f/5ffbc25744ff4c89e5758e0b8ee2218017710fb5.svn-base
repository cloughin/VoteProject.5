/* --- Ballot Title --- */

.tdBallotTitle
{
  color: #373737;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 20px;
  font-weight: bold;
  margin: 0;
  padding-left: 20px;
  text-align: left; /*padding: 0px;*/
}

.tdBallotSubTitle
{
  color: #373737;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 14px;
  font-weight: bold;
  line-height: 18px;
  margin: 0;
  padding-right: 20px;
  text-align: right;
}
/* --- Ballot Instructions --- */

.tdBallotInstruction
{
  color: #444;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 16px; /*color: #373737;
font-size: 14px;*/
  line-height: 15px;
  padding-left: 10px;
  padding-right: 10px;
  vertical-align: top;
}
