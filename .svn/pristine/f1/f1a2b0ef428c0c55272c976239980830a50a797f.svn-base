/***********************************************/
/* Entire page                                 */
/***********************************************/

body.admin-page #outer
{
  position: relative;
}

body.admin-page .sub-heading.headings
{
  float: left;
}

body.admin-page .sub-heading.change-button
{
  position: absolute;
  right: 0;
  top: 10px;
}

body.admin-page h2.jurisdiction-message
{
  margin: 0;
}

body.admin-page h4.credential-message
{
  font-size: 12px;
  font-style: italic;
}

body.admin-page .update-controls
{
  margin: 4px 0 0 0;
  position: relative;
}

body.admin-page #main-tabs
{
  margin: 0 0 20px 0;
  width: 933px;
}

body.admin-page #main-tabs .data-area
{
  min-height: 279px;
}

#main-tabs div.col
{
  float: left;
}

#main-tabs .spacer
{
  height: 10px;
  width: 1px;
}

#main-tabs .input-element
{
  float: left;
  margin: 0 16px 0 0;
}

#main-tabs .content-footer
{
  margin: 0;
}

#main-tabs .feedback-floater-for-ie7
{
  float: left;
  min-height: 1px;
  width: 702px;
}

#main-tabs div.htab-panel div.inner-panel .feedback
{
  width: 676px;
}

#main-tabs input[type=text]
{
  margin-left: 0;
}

#main-tabs .htab-panel
{
  min-height: 509px;
}

#main-tabs div.htab-panel div.inner-panel
{
  min-height: 483px;
}

#main-tabs div.htab-panel div.content-area
{
  min-height: 400px;
}

#main-tabs div.instructions 
{
  margin: 0 0 10px 15px;
}

#main-tabs div.instructions ul
{
  color: #bf9241;
  list-style: disc;
}

#main-tabs div.instructions li
{
  margin-bottom: 2px;
}

#main-tabs div.instructions li span
{
  color: #334f80;
  font-size: 11px;
}

#main-tabs div.instructions em
{
  color: #bf9241;
  font-style: normal;
  font-weight: bold;
}
 
/***********************************************/
/* General Voter Information                   */
/***********************************************/

#main-tabs #tab-generalvoterinfo .pollhours textarea
{
  height: 16px;
  width: 840px;
}

#main-tabs #tab-generalvoterinfo input[type=text]
{
  width: 834px;
}

#main-tabs #tab-generalvoterinfo textarea
{
  height: 88px;
  width: 840px;
}

#main-tabs #tab-generalvoterinfo .howvotingisdone .databox,
#main-tabs #tab-generalvoterinfo .howprimariesaredone .databox {
  margin-bottom: -16px;
}
 
/***********************************************/
/* Primary Voter Information                   */
/***********************************************/
/*
