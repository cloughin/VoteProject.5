}
*/
 
/***********************************************/
/* Ballot Settings                             */
/***********************************************/
 
#main-tabs #tab-ballot input[type=text]
{
  width: 834px;
}

/***********************************************/
/* Election Authority                          */
/***********************************************/

#main-tabs #tab-electionauthority .data-group
{
  float: left;
}

#main-tabs #tab-electionauthority .data-group input[type=text]
{
  width: 230px;
}

#main-tabs #tab-electionauthority p.fieldlabel.head
{
  float: left;
}

#main-tabs #tab-electionauthority p.move-button
{
  float: right;
  margin-right: 13px;
}

#main-tabs #tab-electionauthority .input-element.jurisdictionname
{
  float: none;
  margin-bottom: 10px;
}

#main-tabs #tab-electionauthority p.fieldlabel.name
{
  clear: both;
}

#main-tabs #tab-electionauthority .main-contact .input-element
{
  margin: 0;
}

#main-tabs #tab-electionauthority .swap-button
{
  height: 32px;
  width: 32px;
  background-image: url(/images/swap32.png);
  background-position: 0 0;
  margin: 60px 16px 0 0;
}

#main-tabs #tab-electionauthority .swap-button:hover
{
  background-position: 0 -32px;
}

#main-tabs #tab-electionauthority textarea
{
  height: 64px;
  width: 840px;
}

#main-tabs #tab-electionauthority .input-element.url
{
  margin-right: 48px;
}

#main-tabs #tab-electionauthority .input-element.url input
{
  width: 504px;
}

#main-tabs #tab-electionauthority .input-element.email input
{
  width: 230px;
}

/***********************************************/
/* Master only                                 */
/***********************************************/

#main-tabs #tab-masteronly #master-only-tabs 
{
  margin-top: 10px;
}

#main-tabs #tab-masteronly #master-only-tabs li.tab a 
{
  font-size: 8pt;
  padding: 3px 12px;
}

#main-tabs #tab-masteronly .ui-tabs-panel 
{
  min-height: 316px;
}

#main-tabs #tab-masteronly div.instructions
{
  float: none;
}

#main-tabs #tab-masteronly div.instructions ul
{
  margin: 0 0 0 20px;
  width: 750px;
}

#main-tabs #tab-masteronly div.instructions ul ul
{
  margin: 7px 0 7px 20px;
}

/***********************************************/
/* FIREFOX                                     */
/***********************************************/

@-moz-document url-prefix()
{
  #main-tabs #tab-bulkemail-emailoptions .upload-file
  {
    left: -142px;
    top: 2px;
  }    
  #main-tabs #tab-bulkemail-emailoptions .browse-button
  {
    font-size: 11px;
    left: 0;
    padding: 1px 9px;
    top: 4px;
  }    
}

/***********************************************/
/* CHROME                                      */
/***********************************************/

@media
screen and (-webkit-min-device-pixel-ratio: 0)
{
  #main-tabs #tab-bulkemail-emailoptions .masker2
  {
    display: block;
    height: 26px;
    left: 82px;
    opacity: 0;
    width: 190px;
  }
  
  #main-tabs #tab-bulkemail-emailoptions .browse-button
  {
    font-size: 11px;
    padding: 2px 18px;
    top: 1px;
  }

  #main-tabs #tab-bulkemail-emailoptions .upload-file
  {
    left: 0;
    top: 0;
  }
}

/***********************************************/
/* IE10                                        */
/***********************************************/

.ie10 #main-tabs #tab-bulkemail-emailoptions .masker2
{
  display: block;
  height: 26px;
  left: -155px;
  opacity: 0;
  width: 155px;
}

.ie10 #main-tabs #tab-bulkemail-emailoptions .browse-button
{
  padding: 1px 21px;
  top: 5px;
}

.ie10 #main-tabs #tab-bulkemail-emailoptions .upload-file
{
  left: -149px;
  top: 4px;
}
