#socialMediaButtons
{
  width: 100%;
  height: 37px;
  overflow: visible; /* to clear floats */
  background: #fff url(/images/socialbg.gif) repeat-x;
}
#socialMediaButtons .addthis_toolbox
{
  float: right;
  /*margin: 6px 10px 6px 0;*/
  margin: 6px 0 6px 0;
}
#socialMediaButtons .sampleBallot
{
  padding-top: 6px;
  position: relative;
}
#socialMediaButtons .sampleBallot .electionMenu
{
  position:absolute; 
  top:6px; 
  left:85px; 
  border: 1px solid #c6c6c6;
  font-family: arial;
  font-size: 11px;
  line-height: 120%;
  color: #2a2a2a;
  display: none;
}
#socialMediaButtons .sampleBallot .electionMenu a
{
  color: #666;
  background-color: #ececec;
  padding: 3px;
  text-decoration: none;
  cursor:pointer;
  display: block;
}
#socialMediaButtons .sampleBallot .electionMenu a:hover
{
  color: #fff;
  background-color: #2a90ff;
}
#socialMediaButtons .sampleBallot .padded
{
  padding: 4px;
}
#socialMediaButtons .topOptions
{
  font-family: Arial;
  font-weight: bold;
  color: #999;
  font-size: 11px;
  padding: 10px 0 0 0;
  float: left;
}
#socialMediaButtons .topOptions a
{
  color: #264799;
  text-decoration: none;
}
#socialMediaButtons .topOptions a:hover
{
  color: #264799;
  text-decoration: underline;
  cursor: pointer;
}
#socialMediaButtons .specialLinkLogo
{
  padding: 7px 0 0 30px;
  float: left;
}
#socialMediaButtons .specialLink
{
  font-family: Arial;
  font-weight: bold;
  color: #D00;
  font-size: 11px;
  padding: 10px 0 0 4px;
  float: left;
}
#socialMediaButtons .specialLink a
{
  color: #D00;
  text-decoration: none;
}
#socialMediaButtons .specialLink a:hover
{
  color: #D00;
  text-decoration: underline;
  cursor: pointer;
}
